<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Time_elapsed"
        android:progressTint="@color/gold"
        android:progress="@android:integer/config_mediumAnimTime"
        android:max="@android:integer/status_bar_notification_info_maxnum"
        android:layout_marginTop="200dp"
        android:indeterminate="false"
        android:secondaryProgress="@android:integer/config_longAnimTime"
        android:secondaryProgressTint="@color/clickerButton"
        android:maxHeight="200dp"
        android:minHeight="65dp"
        android:maxWidth="20dp"
        android:minWidth="20dp"
        android:longClickable="false"
        android:backgroundTint="@color/clickerBackground" />
</LinearLayout>