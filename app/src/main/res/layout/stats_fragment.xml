<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timeBar"
            android:progressTint="@color/hot_pink"
            android:minHeight="30dp"
            android:longClickable="false"
            android:backgroundTint="@color/clickerBackground"
            android:indeterminate="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timeText"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textColor="@color/clickerBackground"
            android:text="Starting time..." />

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/codeBar"
            android:progressTint="@color/green"
            android:minHeight="30dp"
            android:longClickable="false"
            android:backgroundTint="@color/clickerBackground"
            android:indeterminate="false" />

        <TextView
            android:text="@string/beggining_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/codeText"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textColor="@color/clickerBackground" />

        <TextView
            android:text="@string/level_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/levelDescriptionTxt"
            android:layout_weight="0"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:paddingTop="10dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/levelDescription"
            android:textAlignment="center"
            android:paddingTop="5dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="@string/code_per_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textStyle="normal|bold"
                android:textAlignment="center" />

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cps"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="50sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="@string/level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textStyle="normal|bold"
                android:textAlignment="center" />

            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lvl"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="50sp"
                android:fontFamily="sans-serif"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>